<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="org.numixproject.torch.MainActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:visibility="visible"
        android:layout_height="fill_parent">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="15dp">


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:elevation="1dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Activate on Tap"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:layout_weight="0.7"
                    android:textColor="#222222"/>
            <Switch
                android:id="@+id/activeOnTouch"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal|center_vertical"
                android:layout_weight="0.3"
                />
                </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="fill_parent"
            android:layout_weight="20"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/freq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43dp"/>


            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:onClick="turnOn"
                android:max="100"/>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:id="@+id/fab1"
        android:layout_height="fill_parent">

    <com.melnykov.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/fab"
        android:onClick="turnOn"
        fab:fab_type="normal"
        fab:fab_colorNormal="#FFEB3B"
        fab:fab_colorPressed="#FDD835"
        fab:fab_colorRipple="#FDD835" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/fab2"
        android:visibility="invisible">

    <com.melnykov.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/fab"
            android:onClick="turnOn"
            fab:fab_type="normal"
            fab:fab_colorNormal="#222222"
            fab:fab_colorPressed="#111111"
            fab:fab_colorRipple="#111111" />
    </FrameLayout>
    </RelativeLayout>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible"
        android:id="@+id/home_view">
        <LinearLayout
            android:id="@+id/activeLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFEB3B">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00000000"
                android:onClick="manageTorch"
                android:src="@drawable/torch"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
